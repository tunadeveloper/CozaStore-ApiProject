@model List<CozaStore.WebUI.Dtos.Product.ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ürünler</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                                <thead class="thead-primary">
                                    <tr>
                                        <th>#</th>
                                        <th>Ürün Adı</th>
                                        <th>Fiyatı</th>
                                        <th>Kategorisi</th>
                                        <th>Popülerlik</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="round-img">
                                                    <a href=""><img width="35" src="@item.ImageURL" alt=""></a>
                                                </div>
                                            </td>
                                            <td>@item.Title</td>
                                            <td>@item.Price ₺</td>
                                            <td>@item.CategoryID</td>
                                            <td><button class="btn btn-warning">Popüler</button></td>
                                            <td><button class="btn btn-danger">Sil</button>
                                            <button class="btn btn-success">Güncelle</button></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group mr-2 mb-2">
                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <a href="@Url.Action("Index", "Products", new { page = i })" class="btn btn-primary @if(i == ViewBag.CurrentPage) {
                        <text>active</text>
 }">
                                @i
                                </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model CozaStore.WebUI.Dtos.About.UpdateAboutDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form action="/" method="post">
                   @Html.HiddenFor(x=>x.AboutID)
                <div class="row">
                    <div class="col-lg-6 mb-4">
                        <div class="form-group">
                            <label class="text-label">Başlık*</label>
                                @Html.TextBoxFor(x => x.Title1, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="form-group">
                            <label class="text-label">Görsel URL*</label>
                                @Html.TextBoxFor(x => x.ImageURL1, new { @class = "form-control", required = "required" })
                        </div>

                            <div class="basic-form">
                                    <div class="form-group">
                                <label class="text-label">Açıklama*</label>
                                    @Html.TextAreaFor(x => x.Description1, new { @class = "form-control", rows = "20", id = "comment", required = "required" })

                            </div>
                        </div>
                    </div>


                        <div class="col-lg-6 mb-4">
                            <div class="form-group">
                                <label class="text-label">Başlık*</label>
                                @Html.TextBoxFor(x => x.Title2, new { @class = "form-control", required = "required" })
                            </div>

                            <div class="form-group">
                                <label class="text-label">Görsel URL*</label>
                                @Html.TextBoxFor(x => x.ImageURL2, new { @class = "form-control", required = "required" })
                            </div>

                            <div class="basic-form">
                                <div class="form-group">
                                    <label class="text-label">Açıklama*</label>
                                    @Html.TextAreaFor(x => x.Description2, new { @class = "form-control", rows = "20", id = "comment", required = "required" })

                                </div>
                            </div>
                        </div>
                </div>

                <button class="btn btn-warning">Bilgileri Güncelle</button>
                </form>
            </div>
        </div>
    </div>

</div>
@model List<CozaStore.WebUI.Dtos.Category.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="card">
                        <div class="stat-widget-two card-body">
                            <div class="stat-content">
                                <div class="stat-digit">@item.CategoryName</div>
                            </div>
                            <div class="d-flex justify-content-center mt-3" style="gap: 15px;">
                                <a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a>
                                <a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-warning">Güncelle</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a href="/Admin/Category/CreateCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
    </div>
</div>




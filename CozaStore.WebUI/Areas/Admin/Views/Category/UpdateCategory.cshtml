@model CozaStore.WebUI.Dtos.Category.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">


                <form action="/Admin/Category/UpdateCategory/" method="post">
                    @Html.HiddenFor(x => x.CategoryID)

                            <div class="basic-form">
                                <div class="form-group">
                                    <label class="text-label">Kategori Adı*</label>
                                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>
                    
                    <button class="btn btn-warning">Bilgileri Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>


@model List<CozaStore.WebUI.Dtos.Feature.ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Öne Çıkanlar</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead class="thead-primary">
                                    <tr>
                                        <th>Görsel</th>
                                        <th>Başlık</th>
                                        <th>Alt Başlık</th>
                                        <th>İşlemler</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div style="border-radius: 10px; overflow: hidden; width: 192px; height: 108px;">
                                                    <a href=""><img src="@item.ImageURL" alt="" class="w-100 h-100" style="object-fit: cover;"></a>
                                                </div>



                                            </td>
                                            <td>@item.Title</td>
                                            <td>@item.Subtitle</td>
                                            <td>
                                                <button class="btn btn-danger">Sil</button>
                                                <button class="btn btn-warning">Düzenle</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="btn-group mr-2 mb-2">
                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <a href="@Url.Action("Index", "Home", new { page = i })" class="btn btn-primary @if(i == ViewBag.CurrentPage) {
                        <text>active</text>
 }">
                                @i
                                </a>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


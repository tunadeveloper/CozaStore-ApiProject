@model CozaStore.WebUI.Dtos.Feature.UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <form method="post">
                   @Html.HiddenFor(x => x.ID)

                    <div class="row">
                        <div class="col-lg-12 mb-4">
                            <div class="form-group">
                                <label class="text-label">Başlık*</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "required" })
                            </div>

                            <div class="basic-form">
                                <div class="form-group">
                                    <label class="text-label">Açıklama*</label>
                                    @Html.TextAreaFor(x => x.Subtitle, new { @class = "form-control", rows = "5", id = "comment", @required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="text-label">Görsel URL*</label>
                                @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-warning">Bilgileri Güncelle</button>

                </form>

            </div>
        </div>
    </div>
</div>
